import discord
from discord.ext import commands
import openai
import os

# ç’°å¢ƒå¤‰æ•°ã‹ã‚‰APIã‚­ãƒ¼ã‚’å–å¾—
DISCORD_TOKEN = os.getenv("DISCORD_BOT_TOKEN")
OPENAI_API_KEY = os.getenv("OPENAI_API_KEY")

# å¿…é ˆãƒã‚§ãƒƒã‚¯ï¼ˆãƒˆãƒ¼ã‚¯ãƒ³æœªè¨­å®šãªã‚‰èµ·å‹•ä¸­æ­¢ï¼‰
if not DISCORD_TOKEN or not OPENAI_API_KEY:
    raise Exception("ç’°å¢ƒå¤‰æ•° DISCORD_BOT_TOKEN ã¾ãŸã¯ OPENAI_API_KEY ãŒè¨­å®šã•ã‚Œã¦ã„ã¾ã›ã‚“ã€‚")

# OpenAIè¨­å®š
openai.api_key = OPENAI_API_KEY

# Discord Botè¨­å®š
intents = discord.Intents.default()
intents.message_content = True
bot = commands.Bot(command_prefix='/', intents=intents)

@bot.event
async def on_ready():
    print(f'âœ… BOTèµ·å‹•å®Œäº†: {bot.user}')

@bot.command()
async def ping(ctx):
    await ctx.send("pong")

@bot.command()
async def chat(ctx, *, prompt: str):
    """ChatGPTã¨ä¼šè©±ã—ã¾ã™ã€‚ä½¿ç”¨ä¾‹: /chat ä»Šæ—¥ã®å¤©æ°—ã¯ï¼Ÿ"""
    try:
        await ctx.send("ğŸ§  è€ƒãˆä¸­â€¦")
        res = openai.ChatCompletion.create(
            model="gpt-4",  # or "gpt-3.5-turbo"
            messages=[
                {"role": "system", "content": "ã‚ãªãŸã¯Discordãƒ¦ãƒ¼ã‚¶ãƒ¼ã®ç›¸è«‡ã«ä¹—ã‚‹ã€å„ªã—ã„AIã‚¢ã‚·ã‚¹ã‚¿ãƒ³ãƒˆã§ã™ã€‚"},
                {"role": "user", "content": prompt}
            ]
        )
        reply = res["choices"][0]["message"]["content"]
        await ctx.send(reply)

    except Exception as e:
        await ctx.send(f"âš ï¸ ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: {e}")

# Botèµ·å‹•
bot.run(DISCORD_TOKEN)
